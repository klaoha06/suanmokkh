<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Cover img</th>
      <th>Downloads</th>
      <th>Description</th>
      <th>Title</th>
      <th>Group</th>
      <th>Isbn 10</th>
      <th>Isbn 13</th>
      <th>Language</th>
      <th>Series</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.path %></td>
        <td><%= book.cover_img %></td>
        <td><%= book.downloads %></td>
        <td><%= book.description %></td>
        <td><%= book.title %></td>
        <td><%= book.group %></td>
        <td><%= book.isbn_10 %></td>
        <td><%= book.isbn_13 %></td>
        <td><%= book.language %></td>
        <td><%= book.series %></td>
        <td><%= book.publisher %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

