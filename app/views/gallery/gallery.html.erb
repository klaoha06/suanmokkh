<% content_for :head do %>
<title>Gallery - Suan Mokkh</title>
<% end %>

<section id="gallery" class="bg-dark">
	<h1 class="text-center wow fadeIn">Gallery</h1>
	<hr>
    <div class="container bg-dark" style="padding:0;">
        <div class="grid">
        	<div class="grid-sizer"></div>
        	<% 15.times do |i| %>
            <div class="grid-item">
                <a href="#" class="portfolio-box">
                <%= image_tag "ajarn#{i+1}.jpg", style: "width:100%;",class: "img-responsive floatCenter"%>
                    <div class="portfolio-box-caption">
                        <div class="portfolio-box-caption-content">
                            <div class="project-category text-faded">
                                Category
                            </div>
                            <div class="project-name">
                                Project Name
                            </div>
                        </div>
                    </div>
                </a>
            </div>
						<% end %>
        </div>
    </div>
        <div class="col-md-12 haveMargin" style="margin-bottom: 30px;">
        <a href="/gallery" class="btn btn-default btn-xl wow fadeIn text-center floatCenter haveMargin" style="width: 200px;">See all</a>
        </div>
</section>

<%= javascript_include_tag 'imagesloaded.pkgd.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'isotope.pkgd.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'gallery', 'data-turbolinks-track' => true %>