				<div class="mainArticle">
					<%= image_tag "#{@featured_news_article.cover_img.url}", size: '150X150',class: "lazyOwl img-responsive floatCenter shadow"%>
					<div class="caption text-center">
						<h3><%= @featured_news_article.title %></h3>
						<p class="text-justify"><%= strip_tags(@featured_news_article.content).first(200) + '...' %></p>
						<p><a href=<%= '/news_articles/' + @featured_news_article.id.to_s %> class="btn btn-primary" role="button">Read More</a></p>
					</div>
				</div>
			</div>
			<div class="col-md-6">
			<% @news_articles.each do |article| %>
				<%= link_to(article) do %>
						<div class="media">
			      <div class="media-body">
			        <h4 class="media-heading" id="media-heading"><b><%= article.title %></b><small> - <i class="fa fa-clock-o"></i> <%= pretty_format(article.created_at) %></small></h4>
			        <p style="font-weight:500"><%= strip_tags(article.content).first(130)%>...</p>
			      </div>
			      <div class="media-right">
			          <img class="media-object" data-src=<%= article.cover_img.url %> alt="64x64" style="width: 75px; height: auto;" src=<%= article.cover_img.url %> data-holder-rendered="true">
			      </div>
			    </div>
			    <% end %>
			  <% end %>

		<a class="pull-right"href="/news">See All</a>
			</div>
			</div>
		</div>
	</div>
</section>
<% end %>