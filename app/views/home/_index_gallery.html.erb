<% if @books.count > 0 %>
	<section id="index-gallery" class="bg-dark">
		<h1 class="text-center wow fadeIn">Gallery</h1>
		<hr>
	    <div class="container bg-primary" style="max-height: 900px; overflow: hidden; padding:0; border:5px solid white;">
	        <div class="grid">
	        	<div class="grid-sizer"></div>
	        	<% 15.times do |i| %>
	            <div class="grid-item">
	                <a href="#" class="portfolio-box">
	                <%= image_tag "ajarn#{i+1}.jpg", style: "width:100%;",class: "img-responsive floatCenter"%>
	                    <div class="portfolio-box-caption">
	                        <div class="portfolio-box-caption-content">
	                            <div class="project-category text-faded">
	                                Category
	                            </div>
	                            <div class="project-name">
	                                Project Name
	                            </div>
	                        </div>
	                    </div>
	                </a>
	            </div>
							<% end %>
	        </div>
	    </div>
	        <div class="col-md-12 haveMargin" style="margin-bottom: 30px;">
	        <a href="/gallery" class="btn btn-default btn-xl wow fadeIn text-center floatCenter haveMargin" style="width: 200px;">See all</a>
	        </div>
	</section>

<% else %>
	
	<section id="index-gallery" class="container-fluid bg-dark text-center havePadding">
		<i class="fa fa-circle-thin fa-4x"></i>
		<h2>No Images Available at this time!</h2>
	<hr>
	</section>

<% end %>

